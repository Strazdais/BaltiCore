{{ 'why-spars.css' | asset_url | stylesheet_tag }}

<section class="why-spars" id="WhySpars-{{ section.id }}">
  <div class="why-spars__inner">
    <div class="why-spars__grid">

      {%- comment -%} TEXT COLUMN {%- endcomment -%}
      <div class="why-spars__text{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">

        {%- comment -%} A) Eyebrow {%- endcomment -%}
        {%- if section.settings.eyebrow != blank -%}
          <p class="why-spars__eyebrow">{{ section.settings.eyebrow | escape }}</p>
        {%- endif -%}

        {%- comment -%} B) Heading {%- endcomment -%}
        {%- if section.settings.heading != blank -%}
          <h2 class="why-spars__heading">
            {{ section.settings.heading_prefix | escape }} <span>{{ section.settings.heading_highlight | escape }}</span>
          </h2>
        {%- endif -%}

        {%- comment -%} C) Intro paragraph {%- endcomment -%}
        {%- if section.settings.intro != blank -%}
          <p class="why-spars__intro">{{ section.settings.intro }}</p>
        {%- endif -%}

        {%- comment -%} D) Proof grid {%- endcomment -%}
        {%- assign proof_blocks = section.blocks | where: 'type', 'proof_item' -%}
        {%- if proof_blocks.size > 0 -%}
          <div class="why-spars__proof-grid">
            {%- for block in proof_blocks -%}
              <div class="why-spars__proof-item" {{ block.shopify_attributes }}>
                <div class="why-spars__proof-icon">
                  {%- case block.settings.icon -%}
                    {%- when 'truck' -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="3" width="15" height="13"/><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/></svg>
                    {%- when 'shield' -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/><path d="m9 12 2 2 4-4"/></svg>
                    {%- when 'box' -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/><polyline points="3.27 6.96 12 12.01 20.73 6.96"/><line x1="12" y1="22.08" x2="12" y2="12"/></svg>
                    {%- when 'pen' -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 20h9"/><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/></svg>
                    {%- when 'users' -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
                    {%- when 'globe' -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>
                    {%- else -%}
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>
                  {%- endcase -%}
                </div>
                <div class="why-spars__proof-text">
                  <span class="why-spars__proof-title">{{ block.settings.title | escape }}</span>
                  {%- if block.settings.subtext != blank -%}
                    <span class="why-spars__proof-sub">{{ block.settings.subtext | escape }}</span>
                  {%- endif -%}
                </div>
              </div>
            {%- endfor -%}
          </div>
        {%- endif -%}

        {%- comment -%} E) CTA row {%- endcomment -%}
        {%- if section.settings.cta_primary_label != blank or section.settings.cta_secondary_label != blank -%}
          <div class="why-spars__cta-row">
            {%- if section.settings.cta_primary_label != blank -%}
              <a href="{{ section.settings.cta_primary_link }}" class="why-spars__btn why-spars__btn--primary">
                {{ section.settings.cta_primary_label | escape }}
              </a>
            {%- endif -%}
            {%- if section.settings.cta_secondary_label != blank -%}
              <a href="{{ section.settings.cta_secondary_link }}" class="why-spars__btn why-spars__btn--secondary">
                {{ section.settings.cta_secondary_label | escape }}
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- if section.settings.hint_line != blank -%}
          <p class="why-spars__hint">{{ section.settings.hint_line | escape }}</p>
        {%- endif -%}

      </div>

      {%- comment -%} MEDIA COLUMN {%- endcomment -%}
      <div class="why-spars__media{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        <div class="why-spars__media-frame">
          {%- if section.settings.image != blank -%}
            {{
              section.settings.image
              | image_url: width: 1200
              | image_tag:
                loading: 'lazy',
                widths: '375, 550, 750, 1000, 1200',
                sizes: '(min-width: 990px) 50vw, 100vw',
                alt: section.settings.heading
            }}
          {%- else -%}
            <div class="why-spars__placeholder">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
                <circle cx="8.5" cy="8.5" r="1.5"/>
                <polyline points="21 15 16 10 5 21"/>
              </svg>
            </div>
          {%- endif -%}

          {%- if section.settings.badge_text != blank -%}
            <span class="why-spars__badge">{{ section.settings.badge_text | escape }}</span>
          {%- endif -%}
        </div>
      </div>

    </div>
  </div>
</section>

